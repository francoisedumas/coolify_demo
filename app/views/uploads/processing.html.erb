<%= turbo_stream_from('ocr_channel') %>
<div id="ocr_result_content">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-lg shadow-lg p-8 text-center">
    <!-- Spinner -->
    <div class="flex justify-center mb-6">
      <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-blue-600"></div>
    </div>

    <h1 class="text-2xl font-bold text-gray-800 mb-4">Processing Your PDF</h1>

    <p class="text-gray-600 mb-4">
      We're running OCR on <span class="font-semibold"><%= @filename %></span>
    </p>

    <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-md text-sm">
      <p class="font-semibold mb-1">Please wait...</p>
      <p>This page will automatically update when processing is complete.</p>
    </div>

    <div class="mt-6">
      <a href="<%= upload_path %>" class="text-blue-600 hover:text-blue-800 text-sm">
        ‚Üê Upload another file
      </a>
    </div>
  </div>
</div>
